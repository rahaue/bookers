<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>UserInfo</h2>
            <%= form_with model:@user, local:true do |f| %>
            <div class="form-group">
                <%= label :name, "Name"%>
                <%= f.text_field :name, class: "form-control user_name" %>
            </div>
            <div class="form-group">
                <%= label :profile_image, "Image" %>
                <%= f.attachment_field :profile_image, class: "form-control-file user_profile_image" %>
            </div>
            <div class="form-group">
                <%= label :introduction, "Introduction" %>
                <%= f.text_area :introduction, class: "form-control user_introduction" %>
            </div>
            <div class="form-group">
                <%= f.submit "Update User", class: "btn btn-secondary" %>
            </div>
            <% end %> 
        </div>
    </div>
</div>