<div class="container">
    <div class="row">
        <%= render 'users/info', user: @user, book: @book %>
        <div class="col-md-8 offset-md-1">
            <h2>Books detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@book_detail.user.id) do %>
                                <%= attachment_image_tag @book_detail.user, :profile_image,
                                format: 'jpeg', size: "40x40",
                                class: "attachment user profile_image fallback", fallback: "no_image.jpg" %>
                                <br><%= @book_detail.user.name %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to book_path(@book_detail.id) do %>
                                <%= @book_detail.title %>
                            <% end %>
                        </td>
                        <td><%= @book_detail.body %></td>
                        <% if current_user.id == @book_detail.user_id %>
                        <td>
                            <%= link_to "Edit", edit_book_path(@book_detail.id), class: "btn btn-success btn-sm" %>
                        </td>
                        <td>
                            <%= link_to "Destroy", book_path(@book_detail.id), method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "本当に消しますか？"} %>
                        </td>
                        <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>